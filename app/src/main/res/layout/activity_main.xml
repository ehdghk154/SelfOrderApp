<?xml version="1.0" encoding="utf-8"?>
<!--메인 테이블 레이아웃-->
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:background="@drawable/title_style"
        android:text="멀티스토어"
        android:textSize="25dp"
        android:gravity="center"/>
    <TableRow>
        <ImageView
            android:id="@+id/chicken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="19dp"
            android:layout_span="1"
            android:onClick="onClick1"
            android:src="@drawable/picture01" />

        <ImageView
            android:id="@+id/pizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="19dp"
            android:layout_span="1"
            android:onClick="onClick2"
            android:src="@drawable/picture02" />

        <ImageView
            android:id="@+id/china"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="19dp"
            android:layout_span="1"
            android:onClick="onClick3"
            android:src="@drawable/picture03" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="치킨" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="피자" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="중국집" />
    </TableRow>

    <TableRow>
        <ImageView
            android:id="@+id/korea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="19dp"
            android:layout_span="1"
            android:onClick="onClick4"
            android:src="@drawable/picture04" />

        <ImageView
            android:id="@+id/hamburger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="19dp"
            android:layout_span="1"
            android:onClick="onClick5"
            android:src="@drawable/picture05" />

        <ImageView
            android:id="@+id/snack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="19dp"
            android:layout_span="1"
            android:onClick="onClick6"
            android:src="@drawable/picture06" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="한식" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="햄버거" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="분식" />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:text="주문 목록" />
    </TableRow>
    <TableRow>

        <ListView
            android:id="@+id/lv2"
            android:layout_width="293dp"
            android:layout_height="214dp"
            android:layout_margin="15dp"
            android:layout_span="2"
            android:background="@drawable/button_style"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_style"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="결제"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/button_style"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="취소" />
        </LinearLayout>
    </TableRow>
    <TableRow>

    </TableRow>
</TableLayout>